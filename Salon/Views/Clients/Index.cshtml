@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>;

  <h2>Your Client:</h2>
  @if (@Model.Count == 0)
  {
    <p>No clients have been added yet!</p>
  }
  <ul>
    @foreach(Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>