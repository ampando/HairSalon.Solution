@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>;

  <h2>Eu Claire Salon Client List:</h2>
  @if (@Model.Count == 0)
  {
    <p>You Do Not Currently Have Any Clients Added.</p>
  }
  <ul>
    @foreach(Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a New Client", "Create")</p>
  <p>@Html.ActionLink("Return Home", "Index", "Home")</p>