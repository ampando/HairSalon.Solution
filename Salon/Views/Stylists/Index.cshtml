@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylist>;

  <h2>Eu Claire Salon Stylist List:</h2>
  @if (@Model.Count == 0)
  {
    <p>You Do Not Currently Have Any Stylists Added.</p>
  }
  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add New Stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>