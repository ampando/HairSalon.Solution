@{
  Layout = "_Layout";
}

@model Salon.Models.stylist
@using Salon.Models

<h2>Stylist Information</h2>
<hr />
<p>@Html.DisplayNameFor(model => model.StylistName): @Html.DisplayFor(model.StylistName)</p>

<ul>
  @foreach(Client Client in Model.Clients)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
  }
  </ul>
  
  <hr />
  <p>@Html.ActionLink("Add stylist", "Create", "Clients", new { id = Model.StylistName })</p>
  <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistName })</p>
  <p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistName })</p>
  <p>@Html.ActionLink("Back to list", "Index")</p>
